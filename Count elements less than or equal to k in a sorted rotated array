class Solution {
    public int countLessEqual(int[] arr, int x) {
        Arrays.sort(arr);   // If array is not already sorted

        int low = 0, high = arr.length - 1;
        int ans = -1;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] <= x) {
                ans = mid;
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }

        return ans + 1;
    }
}
