import java.util.*;

class Solution {
    int getMinDiff(int[] arr, int k) {
        int n=arr.length;
        if (n <= 1) return 0;
        Arrays.sort(arr);
        int ans = arr[n - 1] - arr[0];
        for (int i = 0; i < n - 1; i++) {
            int high = Math.max(arr[i] + k, arr[n - 1] - k);
            int low = Math.min(arr[0] + k, arr[i + 1] - k);
            if (low < 0) continue;
            ans = Math.min(ans, high - low);
        }
        return ans;
    }
}
