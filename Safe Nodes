import java.util.*;

class Solution {
    public ArrayList<Integer> safeNodes(int V, int[][] edges) {
        // Step 1: Create adjacency list for the reversed graph
        ArrayList<ArrayList<Integer>> adjRev = new ArrayList<>();
        for (int i = 0; i < V; i++) {
            adjRev.add(new ArrayList<>());
        }

        int[] indegree = new int[V];

        // Reverse the edges
        for (int[] edge : edges) {
            int u = edge[0];
            int v = edge[1];
            adjRev.get(v).add(u); // reverse edge
            indegree[u]++;        // increase indegree of 'u'
        }

        // Step 2: Queue for BFS
        Queue<Integer> q = new LinkedList<>();
        ArrayList<Integer> safe = new ArrayList<>();

        // Add all nodes with indegree 0
        for (int i = 0; i < V; i++) {
            if (indegree[i] == 0)
                q.add(i);
        }

        // Step 3: Kahn's Algorithm (Topological Sort)
        while (!q.isEmpty()) {
            int node = q.poll();
            safe.add(node);

            for (int neighbor : adjRev.get(node)) {
                indegree[neighbor]--;
                if (indegree[neighbor] == 0)
                    q.add(neighbor);
            }
        }

        // Step 4: Sort the result (safe nodes)
        Collections.sort(safe);
        return safe;
    }
}
