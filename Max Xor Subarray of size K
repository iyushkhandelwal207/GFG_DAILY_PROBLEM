class Solution {
    public int maxSubarrayXOR(int[] arr, int k) {
        int n = arr.length;
        
        // XOR of first window
        int currXor = 0;
        for (int i = 0; i < k; i++) {
            currXor ^= arr[i];
        }
        
        int maxXor = currXor;
        
        // Slide the window
        for (int i = k; i < n; i++) {
            currXor ^= arr[i - k]; // remove outgoing element
            currXor ^= arr[i];     // add incoming element
            maxXor = Math.max(maxXor, currXor);
        }
        
        return maxXor;
    }
}
