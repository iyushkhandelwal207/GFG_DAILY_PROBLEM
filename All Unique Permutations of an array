import java.util.*;

class Solution {
    public static ArrayList<ArrayList<Integer>> uniquePerms(int[] arr) {
        Arrays.sort(arr); // sort to handle duplicates
        ArrayList<ArrayList<Integer>> result = new ArrayList<>();
        boolean[] used = new boolean[arr.length];
        backtrack(arr, new ArrayList<>(), used, result);
        return result;
    }

    private static void backtrack(int[] arr, ArrayList<Integer> curr, boolean[] used, ArrayList<ArrayList<Integer>> result) {
        if (curr.size() == arr.length) {
            result.add(new ArrayList<>(curr));
            return;
        }
        for (int i = 0; i < arr.length; i++) {
            // Skip if already used
            if (used[i]) continue;
            // Skip duplicates
            if (i > 0 && arr[i] == arr[i - 1] && !used[i - 1]) continue;

            // Choose
            curr.add(arr[i]);
            used[i] = true;

            // Recurse
            backtrack(arr, curr, used, result);

            // Undo choice
            used[i] = false;
            curr.remove(curr.size() - 1);
        }
    }
}
