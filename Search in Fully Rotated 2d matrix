class Solution {
    public boolean searchMatrix(int[][] mat, int x) {
        int n = mat.length;
        int m = mat[0].length;
        int left = 0, right = n * m - 1;

        while (left <= right) {
            int mid = left + (right - left) / 2;

            // Convert mid index to 2D coordinates
            int row = mid / m;
            int col = mid % m;
            int midVal = mat[row][col];

            if (midVal == x) return true;

            // Find values at left and right for comparison
            int leftVal = mat[left / m][left % m];
            int rightVal = mat[right / m][right % m];

            // Left half is sorted
            if (leftVal <= midVal) {
                if (x >= leftVal && x < midVal) {
                    right = mid - 1; // search left side
                } else {
                    left = mid + 1; // search right side
                }
            } 
            // Right half is sorted
            else {
                if (x > midVal && x <= rightVal) {
                    left = mid + 1; // search right side
                } else {
                    right = mid - 1; // search left side
                }
            }
        }
        return false;
    }
}
