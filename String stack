class Solution {
    public boolean stringStack(String pat, String tar) {
        int i = pat.length() - 1;
        int j = tar.length() - 1;

        while (i >= 0 && j >= 0) {
            if (pat.charAt(i) != tar.charAt(j)) {
                // simulate a delete (which in reverse removes one extra char)
                i -= 2;
            } else {
                // matched this char of tar
                i--;
                j--;
            }
        }

        return j < 0;
    }
}
