class Solution {
    public int subarrayXor(int[] arr) {
        int n = arr.length;
        
        // If n is even, no element contributes
        if (n % 2 == 0) return 0;

        int ans = 0;

        // If n is odd, only even indices contribute
        for (int i = 0; i < n; i += 2) {
            ans ^= arr[i];
        }

        return ans;
    }
}
