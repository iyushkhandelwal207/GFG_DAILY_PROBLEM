class Solution {
    public Node reverse(Node head) {
        if (head == null || head.next == null) return head;

        Node curr = head;
        Node prev = null;

        while (curr != null) {
            // Swap next and prev
            Node temp = curr.prev;
            curr.prev = curr.next;
            curr.next = temp;

            prev = curr;
            curr = curr.prev; // move to the "next" node in original list
        }

        return prev; // new head
    }
}
