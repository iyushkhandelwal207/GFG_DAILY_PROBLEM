class Solution {
    public int startStation(int[] gas, int[] cost) {
        int total = 0;   // total net gas
        int tank = 0;    // current fuel in tank
        int start = 0;   // starting station index

        for (int i = 0; i < gas.length; i++) {
            int diff = gas[i] - cost[i];
            total += diff;
            tank += diff;

            // If tank goes negative, reset start
            if (tank < 0) {
                start = i + 1;
                tank = 0;
            }
        }

        return total < 0 ? -1 : start;
    }
}
