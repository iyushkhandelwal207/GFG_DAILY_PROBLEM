import java.util.*;

class Solution {
    public ArrayList<Integer> topKFreq(int[] arr, int k) {
        // Step 1: Count frequencies using HashMap
        HashMap<Integer, Integer> freqMap = new HashMap<>();
        for (int num : arr) {
            freqMap.put(num, freqMap.getOrDefault(num, 0) + 1);
        }

        // Step 2: Use a PriorityQueue (max heap) with custom comparator
        PriorityQueue<int[]> pq = new PriorityQueue<>((a, b) -> {
            if (b[1] == a[1]) 
                return b[0] - a[0]; // If frequency same, higher number first
            return b[1] - a[1];     // Otherwise, higher frequency first
        });

        // Step 3: Add all elements to heap
        for (Map.Entry<Integer, Integer> entry : freqMap.entrySet()) {
            pq.add(new int[]{entry.getKey(), entry.getValue()});
        }

        // Step 4: Extract top k elements
        ArrayList<Integer> result = new ArrayList<>();
        for (int i = 0; i < k && !pq.isEmpty(); i++) {
            result.add(pq.poll()[0]);
        }

        return result;
    }
}
