import java.util.*;

class Solution {
    public int assignHole(int[] mices, int[] holes) {
        // Step 1: Sort both arrays
        Arrays.sort(mices);
        Arrays.sort(holes);

        int n = mices.length;
        int maxTime = 0;

        // Step 2: Assign mice[i] -> holes[i] and calculate max distance
        for (int i = 0; i < n; i++) {
            maxTime = Math.max(maxTime, Math.abs(mices[i] - holes[i]));
        }

        return maxTime;
    }
}
