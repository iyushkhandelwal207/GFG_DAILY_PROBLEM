class Solution {
    public static int findPages(int[] arr, int k) {
        int n = arr.length;
        
        // If books are less than students, impossible
        if (n < k) return -1;
        
        int low = 0, high = 0;
        for (int pages : arr) {
            low = Math.max(low, pages); // max book
            high += pages; // total sum
        }
        
        int result = -1;
        while (low <= high) {
            int mid = low + (high - low) / 2;
            
            if (isPossible(arr, n, k, mid)) {
                result = mid;
                high = mid - 1; // try smaller maximum
            } else {
                low = mid + 1; // increase limit
            }
        }
        return result;
    }
    
    private static boolean isPossible(int[] arr, int n, int k, int maxPages) {
        int students = 1;
        int pagesSum = 0;
        
        for (int pages : arr) {
            if (pagesSum + pages > maxPages) {
                students++;
                pagesSum = pages;
                if (students > k) return false;
            } else {
                pagesSum += pages;
            }
        }
        return true;
    }
}
