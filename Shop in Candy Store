import java.util.*;

class Solution {
    public ArrayList<Integer> minMaxCandy(int[] prices, int k) {
        Arrays.sort(prices); // sort ascending for min calculation
        int n = prices.length;

        // --- Minimum Cost ---
        int minCost = 0;
        int i = 0, j = n - 1;
        while (i <= j) {
            minCost += prices[i]; // buy cheapest
            i++;
            j -= k; // get k expensive ones free
        }

        // --- Maximum Cost ---
        int maxCost = 0;
        i = n - 1;
        j = 0;
        while (i >= j) {
            maxCost += prices[i]; // buy expensive
            i--;
            j += k; // get k cheapest ones free
        }

        ArrayList<Integer> ans = new ArrayList<>();
        ans.add(minCost);
        ans.add(maxCost);
        return ans;
    }
}
