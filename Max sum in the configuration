class Solution {
    int maxSum(int[] arr) {
        int n = arr.length;
        int sumArr = 0;
        int currVal = 0;

        // calculate sumArr and currVal for original array
        for (int i = 0; i < n; i++) {
            sumArr += arr[i];
            currVal += i * arr[i];
        }

        int maxVal = currVal;

        // rotate array n-1 times and update maximum
        for (int j = 1; j < n; j++) {
            currVal = currVal + sumArr - n * arr[n - j];
            if (currVal > maxVal)
                maxVal = currVal;
        }

        return maxVal;
    }
}
