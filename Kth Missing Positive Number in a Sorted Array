class Solution {
    public int kthMissing(int[] arr, int k) {
        int n = arr.length;

        for (int i = 0; i < n; i++) {
            int missing = arr[i] - (i + 1);

            if (missing >= k) {
                return k + i;
            }
        }

        // If kth missing is after the last element
        return k + n;
    }
}
